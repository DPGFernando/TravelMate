<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8E8F7"
    tools:context=".EventManagerProfile">


    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_arrow_back_ios_24" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="136dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="128dp"
        android:contentDescription="Profile Image"
        android:scaleType="centerCrop"
        android:src="@drawable/img_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="242dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:text="FirstName LastName"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="130dp"
        android:text="username@gmail.com"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <LinearLayout

        android:id="@+id/rectangle_5"
        android:layout_width="303dp"
        android:layout_height="142dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="56dp"


        android:background="@drawable/img_1"
        android:orientation="horizontal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logOut"
        android:layout_width="175dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/custom_btn"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="370dp"
        android:backgroundTint="#0077B6"
        android:paddingEnd="20dp"
        android:text="Log out"
        />


    <TextView
        android:id="@+id/email_usern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="294dp"
        android:gravity="top"

        android:text="Email: username@gmail.com" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="270dp"
        android:gravity="top"

        android:text="Username: FirstName LastName" />

    <TextView
        android:id="@+id/password_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="318dp"
        android:gravity="top"

        android:text="Password: **********" />

    <TextView
        android:id="@+id/contact_947"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="342dp"
        android:gravity="top"

        android:text="Contact:  94717601394" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pen"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="314dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/img_2"
        android:clipToOutline="true" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pen1"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="314dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/img_2"
        android:clipToOutline="true" />

    <Button
        android:id="@+id/saveChanges"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/custom_btn"
        android:enabled="false"
        android:text="Save Changes" />


</RelativeLayout>